{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES6",
      "es2017",
      "es2015"
    ],
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "paths": {
      "~/*": [
        "../../melt-cover-cloud/src/*"
      ],
      "~framework/*": [
        "../../melt-cover-cloud/src/framework/*"
      ],
      "~components/*": [
        "../../melt-cover-cloud/src/solution/components/*"
      ],
      "~model/*": [
        "../../melt-cover-cloud/src/solution/model/*"
      ],
      "~assets/*": [
        "../../melt-cover-cloud/src/solution/assets/*"
      ],
      "~pages/*": [
        "../../melt-cover-cloud/src/solution/pages/*"
      ],
      "~shared/*": [
        "../../melt-cover-cloud/src/solution/shared/*"
      ],
      "@/*": [
        "*"
      ],
      "@framework/*": [
        "framework/*"
      ],
      "@components/*": [
        "solution/components/*"
      ],
      "@model/*": [
        "solution/model/*"
      ],
      "@assets/*": [
        "solution/assets/*"
      ],
      "@pages/*": [
        "solution/pages/*"
      ],
      "@shared/*": [
        "solution/shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "bundle",
    "webpack.*",
    "acceptance-tests",
    "jest"
  ]
}